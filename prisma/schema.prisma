generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usina {
  id            Int             @id @default(autoincrement())
  nome          String          @unique
  distribuidora String?
  consorcio     String?
  latitude      Decimal?        @db.Decimal(10, 8)
  longitude     Decimal?        @db.Decimal(11, 8)
  potencia      Float?
  geracoes      GeracaoDiaria[]
}

model GeracaoDiaria {
  id         Int      @id @default(autoincrement())
  usinaId    Int
  usina      Usina    @relation(fields: [usinaId], references: [id])
  data       DateTime
  energiaKwh Float
  ocorrencia String
  clima      String
}
